generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id          Int       @id @default(autoincrement())
    name        String
    email       String    @unique
    createdAt   DateTime  @default(now())

    insights    Insight[]
}

model Insight {
    id         Int        @id @default(autoincrement())
    input      String
    output     String
    createdAt  DateTime   @default(now())

    userId     Int
    user       User       @relation(fields: [userId], references: [id])

    @@index([userId])
}